	<div class="hero-section clearfix">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-3 col-md-6">
				
		<div class="login-form">
            <div class="col-md-12 text-center" style="color: red; font-size: 20px;">
                <%if(errors != null){ for(var i=0; i< errors.length; i++){%>
                    <p>
                        <%=errors[i].msg%>
                    </p>
                    <%}}else if(success != null){%>
                        <p>
                            <%= success%>
                        </p>
                        <%}%>
            </div>
		<h2 class="text-center">Login to your account!</h2>
			<form action="" method="post" id="form">
				
				<div class="form-group">
					<label for="email">Email</label>
					<input type="text" name="email" id="email" class="form-control" placeholder="Enter your email">
					
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" class="form-control" placeholder="Enter your password">
					
				</div>
				
				<button class="btn btn-primary" id="submit" type="submit">Login</button>
			</form>
			</div>
			</div>
		</div>
	</div>
	</div>
